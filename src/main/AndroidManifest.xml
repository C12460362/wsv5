<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.ryan.walkstar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/walkstar"
        android:label="WalkStars"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserAreaActivity"
            android:label="@string/title_activity_user_area"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginOptionActivity"
            android:label="WalkStars"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ChallengeMakerActivity"
            android:label="@string/title_activity_challenge_maker"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChallengeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".OptionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuizActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ParentMainActivity"
            android:label="@string/title_activity_parent_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PickChallengeActivity"
            android:label="@string/title_activity_pick_challenge"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".BackgroundService" />
        <service android:name=".CountSteps"/>


        <activity
            android:name=".ChallengesOptionsActivity"
            android:label="@string/title_activity_challenges"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>