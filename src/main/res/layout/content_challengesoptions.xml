<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/night"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ChallengesOptionsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WalkStars"
        android:textSize="70sp"
        android:fontFamily="WalkStars"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/wsLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenges"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:id="@+id/textView11"
        android:layout_below="@+id/wsLogo"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="New Challenge"
        android:id="@+id/ch1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/edges"
        android:layout_above="@+id/ch2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Challenge"
        android:id="@+id/ch2"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/edges"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/ch1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Challenge"
        android:id="@+id/ch3"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/edges"
        android:layout_below="@+id/ch2"
        android:layout_alignStart="@+id/ch2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default Challenge"
        android:id="@+id/button2"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/edges"
        android:layout_below="@+id/ch3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />
</RelativeLayout>
