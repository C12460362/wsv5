<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.ryan.walkstar.OptionsActivity"
    android:background="@mipmap/night">

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton"
        android:background="@drawable/oval"
        android:elevation="10dp"
        android:layout_marginRight="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/fab3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/oval"
        android:elevation="10dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/yellow"
        android:layout_above="@+id/fab7"
        android:layout_alignStart="@+id/imageButton" />

    <ImageButton
        android:id="@+id/fab4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/oval"
        android:elevation="10dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginTop="46dp"
        android:backgroundTint="@color/purple"/>

    <ImageButton
        android:id="@+id/fab5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/oval"
        android:elevation="10dp"
        android:layout_marginRight="25dp"
        android:layout_alignTop="@+id/fab6"
        android:layout_alignStart="@+id/fab8"
        android:backgroundTint="@color/grey"/>

    <ImageButton
        android:id="@+id/fab6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/oval"
        android:elevation="10dp"
        android:layout_marginRight="25dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginTop="51dp"
        android:backgroundTint="@color/blue"/>

    <ImageButton
        android:id="@+id/fab7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/oval"
        android:elevation="10dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/green"
        android:layout_above="@+id/imageButton"
        android:layout_toEndOf="@+id/fab3" />

    <ImageButton
        android:id="@+id/fab8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/oval"
        android:elevation="10dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/orange"
        android:layout_above="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/grey"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MiniGame"
        android:textColor="@color/grey"
        android:id="@+id/textView3"
        android:layout_below="@+id/fab8"
        android:layout_alignStart="@+id/fab8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awards"
        android:textColor="@color/grey"
        android:id="@+id/textView4"
        android:layout_below="@+id/fab3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenges"
        android:textColor="@color/grey"
        android:id="@+id/textView5"
        android:layout_below="@+id/fab5"
        android:layout_alignStart="@+id/fab5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:textColor="@color/grey"
        android:id="@+id/textView6"
        android:layout_below="@+id/fab4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MakeChallenge"
        android:textColor="@color/grey"
        android:id="@+id/textView7"
        android:layout_below="@+id/fab6"
        android:layout_toEndOf="@+id/fab4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:textColor="@color/grey"
        android:id="@+id/textView8"
        android:layout_below="@+id/fab7"
        android:layout_alignEnd="@+id/fab7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigation"
        android:layout_marginLeft="0dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
