<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/night"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.google.ryan.walkstar.LoginOptionActivity"
    tools:showIn="@layout/activity_login_option"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parent Login"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/edges"
        android:id="@+id/pickChallenge"
        android:layout_marginTop="171dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Login"
        android:id="@+id/viewChallenges"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/edges"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/pickChallenge"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select A Login"
        android:id="@+id/logintext"
        android:textColor="@color/babyblue"
        android:textSize="17sp"
        android:layout_alignBottom="@+id/pickChallenge"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WalkStars"
        android:textSize="70sp"
        android:fontFamily="WalkStars"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/wsLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Step In The Right Direction"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/wsLogo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teacher Login (Locked)"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/edges"
        android:id="@+id/teacherLogin"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/viewChallenges"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/regbtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
