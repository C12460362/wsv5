<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/night"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.google.ryan.walkstar.PickChallengeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WalkStars"
        android:textSize="70sp"
        android:fontFamily="WalkStars"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/wsLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Step In The Right Direction"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/wsLogo"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Challenge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/edges"
        android:id="@+id/pickChallenge"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/wsLogo"
        android:layout_alignEnd="@+id/wsLogo" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Challenges"
        android:id="@+id/viewChallenges"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/edges"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/pickChallenge"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Progress"
        android:id="@+id/cProgress"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/edges"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/viewChallenges"
        android:layout_alignParentStart="true" />

</RelativeLayout>

